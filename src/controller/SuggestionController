package controller;

import model.Suggestion;

import java.util.ArrayList;
import java.util.List;

public class SuggestionController {
    private List<Suggestion> suggestions;

    public SuggestionController() {
        suggestions = new ArrayList<>();
    }

    // Create a new suggestion and add it to the list
    public Suggestion createSuggestion(int suggestionId, String sender, String receiver, String message, String status) {
        Suggestion suggestion = new Suggestion(suggestionId, sender, receiver, message, status);
        suggestions.add(suggestion);
        return suggestion;
    }

    // Get a list of all suggestions
    public List<Suggestion> getAllSuggestions() {
        return suggestions;
    }

    // Find a suggestion by its ID
    public Suggestion findSuggestionById(int suggestionId) {
        for (Suggestion suggestion : suggestions) {
            if (suggestion.getSuggestionId() == suggestionId) {
                return suggestion; //Suggestion found
            }
        }
        return null; //Suggestion with that ID not found
    }

    // Update suggestion information
    public boolean updateSuggestionInformation(int suggestionId, String newMessage, String newStatus) {
        Suggestion suggestion = findSuggestionById(suggestionId);
        if (suggestion != null) {
            suggestion.setMessage(newMessage);
            suggestion.setStatus(newStatus);
            return true;
        }
        return false; // Suggestion not found
    }

    // Remove a suggestion from the list
    public boolean deleteSuggestion(int suggestionId) {
        Suggestion suggestion = findSuggestionById(suggestionId);
        if (suggestion != null) {
            suggestions.remove(suggestion);
            return true; 
        }
        return false; // Suggestion not found
    }
}
